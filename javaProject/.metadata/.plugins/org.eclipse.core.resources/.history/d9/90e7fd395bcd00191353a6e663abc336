package Q20;

public class PersonTest {

	public static void main(String[] args) {
		Person[] men = new Person[10];
		for(int i=0;i<men.length;i++) {
			men[i].setHeight(Math.random()*(300-150+1)+150);
		}
		Person maxPerson = getMaximum(men);
		System.out.println("가장 키 큰 사람 = "+maxPerson.name+" 키는 "+maxPerson.height);
	}

	private static Person getMaximum(Person[] array) {
		Person max = array[0];
		for(int i=0;i<array.length;i++) {
			if(max.height<array[i].height) {
				max=array[i];
			}
		}
		return max;
	}
}
