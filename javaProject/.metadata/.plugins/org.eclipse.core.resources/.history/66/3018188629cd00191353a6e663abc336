package Noname;

public class ATest {

	public static void main(String[] args) {
		B b = new A();
		b.turnOn();
		b.turnOff();
		B2 b2 = new B2() { //객체 선언 뒤에 중괄호를 붙이는 것으로 컴파일러는 다른 클래스 없이 여기에 바로 클래스 선언을 하는 것으로 받아들인다.
			@Override
			public void turnOn() {
				System.out.println("On");
			}
			@Override
			public void turnOff() {
				System.out.println("Off");
			}
		};
		b2.turnOn();
		b2.turnOff();
	}

}
